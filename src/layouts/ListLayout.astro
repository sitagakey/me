---
import IconHeadingContent from '../components/heading/IconHeadingContent.astro';
import BaseHead from '../components/layout/BaseHead.astro';
import Footer from '../components/layout/Footer.astro';
import Header from '../components/layout/Header.astro';
import { SITE_TITLE } from '../consts';

interface Props {
  heading: string;
  icon: string;
}

const { heading, icon } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <BaseHead title={SITE_TITLE} />
    <style>
      .content-container {
        padding: 40px 24px;
        margin: 0 auto;
        max-width: 1280px;
        display: flex;
        flex-direction: column;
        gap: 40px;

        @media (max-width: 768px) {
          padding: 40px 16px;
          gap: 24px;
        }
      }
    </style>
  </head>

  <body>
    <Header />

    <main class="content-container">
      <h1><IconHeadingContent iconName={icon} size="md">{heading}</IconHeadingContent></h1>

      <slot />
    </main>
    <Footer />
  </body>
</html>
