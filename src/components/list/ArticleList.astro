---
import type { ArticleInfo } from '../../lib/articles/types';
import { formatDate } from '../../lib/date';
import TagList from './TagList.astro';

interface Props {
  headingLevel?: 2 | 3;
  list: ArticleInfo[];
}

const { list, headingLevel } = Astro.props;
---

<div class="article-list">
  {
    list.map((article) => (
      <section class="item">
        <a href={`/articles/${article.id}`} class="thumbnail">
          {article.thumbnail && <img src={article.thumbnail} alt="" width="720" height="360" />}
        </a>

        <time class="date" datetime={article.publishedAt.toISOString()}>
          {formatDate(article.publishedAt)}
        </time>

        {headingLevel === 2 && (
          <h2 class="title">
            <a href={`/articles/${article.id}`} class="title" title={article.title}>
              {article.title}
            </a>
          </h2>
        )}
        {headingLevel === 3 && (
          <h3 class="title">
            <a href={`/articles/${article.id}`} class="title">
              {article.title}
            </a>
          </h3>
        )}

        <TagList list={article.tagList} size="sm" />
      </section>
    ))
  }
</div>

<style>
  .article-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 40px;
  }

  .item {
    display: grid;
    width: 100%;
    height: 100%;
    gap: 8px;
    text-decoration: none;
    grid-template-rows: subgrid;
    grid-template-rows: auto auto 1fr auto;
  }

  .thumbnail {
    display: block;
    width: 100%;
    aspect-ratio: 1.91 / 1;
    overflow: hidden;
    border-radius: 16px;
    border: 1px solid var(--gray);
  }

  .thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .date {
    font-size: 10px;
    color: var(--gray-dark);
  }

  .title {
    color: var(--black);
    text-decoration: none;
    font-size: 18px;
    font-weight: 700;
    overflow: hidden;
    display: -webkit-box;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
  }
</style>
